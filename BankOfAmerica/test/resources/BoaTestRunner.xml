            <class name="socialMediaLinkage.SocialMediaHandles"/>
            <class name="pageNavigation.NavigationFromHomePageFooter"/>
            <class name="homePageHiddenFeatures.HiddenFeaturesHome"/>
            <class name="signInPanel.negativeSignIn"/>
